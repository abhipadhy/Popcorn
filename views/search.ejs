      document.querySelector('#card4').style.opacity="0.9";
      document.querySelector('#card1').style.transition='1s';
      document.querySelector('#card2').style.transition='2.5s';
      document.querySelector('#card3').style.transition='4s';
      document.querySelector('#card4').style.transition='5.5s';
    } 

    else if (scroll_position >20){
        image.style.backgroundPosition="100% 50%";
